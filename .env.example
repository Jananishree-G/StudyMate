# StudyMate Advanced API Configuration

# Application Info
APP_NAME=StudyMate API
APP_VERSION=2.0.0
APP_DESCRIPTION=Advanced AI Academic Assistant with IBM Granite Integration

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
RELOAD=false

# Security Configuration
SECRET_KEY=your_super_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501,http://localhost:8502
ALLOWED_METHODS=*
ALLOWED_HEADERS=*

# Database Configuration
DATABASE_URL=postgresql://studymate:studymate@localhost/studymate_db
DATABASE_ECHO=false

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# HuggingFace Configuration - REQUIRED
# Get your token from: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_huggingface_token_here
HUGGINGFACE_CACHE_DIR=./models/huggingface

# IBM Granite Model Configuration
DEFAULT_GRANITE_MODEL=granite-3b-code-instruct

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# FAISS Configuration
FAISS_INDEX_TYPE=IndexFlatIP
FAISS_NLIST=100
FAISS_NPROBE=10

# File Processing Settings
MAX_FILE_SIZE_MB=100
MAX_FILES_PER_UPLOAD=20
ALLOWED_FILE_TYPES=pdf,txt,docx
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MIN_CHUNK_SIZE=100

# Search Configuration
MAX_SEARCH_RESULTS=10
MIN_SIMILARITY_SCORE=0.1

# Generation Configuration
MAX_NEW_TOKENS=512
DEFAULT_TEMPERATURE=0.7
DEFAULT_TOP_P=0.9
DEFAULT_TOP_K=50

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Data Directories (relative to project root)
DATA_DIR=data
UPLOAD_DIR=data/uploads
PROCESSED_DIR=data/processed
EMBEDDINGS_DIR=data/embeddings
MODELS_DIR=models
LOGS_DIR=logs
